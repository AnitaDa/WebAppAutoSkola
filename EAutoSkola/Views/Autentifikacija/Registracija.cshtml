@model EAutoSkola.ViewModel.RegistracijaViewModel;
@{
    ViewData["Title"] = "Registracija";
    Layout = "_LayoutPocetni";
}
    <div class="container register">
        <div class="row">
            <div class="col-md-3 register-left">
                <img src="~/images/automobil.PNG" alt="" />
                <h3>Dobrodošli!</h3>
                <p>Nemate vozačku dozvolu? Na pravom ste mjestu!</p>
                <a class="btnRegister" href="/Autentifikacija/Login"  >Prijavi se</a><br />
            </div>
            <div class="col-md-9 register-right">

                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

                        <div class="tab-pane fade show" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <form method="post">
                                <h3 class="register-heading">Registruj se</h3>
                                <div class="row register-form text-danger" asp-validation-summary="All">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input asp-for="Ime" class="form-control" placeholder="Ime *" />      
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Prezime" class="form-control" placeholder="Prezime *" />
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="JMBG" class="form-control" placeholder="JMBG *" />
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="KorisnickoIme" class="form-control" placeholder="Korisnicko ime *" />
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Email" class="form-control" placeholder="Email *" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input asp-for="DatumRodjenja" class="form-control" placeholder="Datum rodjenja *" />
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Lozinka" class="form-control" placeholder="Lozinka *" />
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="PotvrdjenaLozinka" class="form-control" placeholder="Potvrdi lozinku *" />
                                        </div>
                                        <input type="submit" class="btnRegister" value="Registruj se" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
