@model EAutoSkola.ViewModel.UslugeViewModel;
@{
    ViewData["Title"] = "UrediUslugu";
    Layout = "_LayoutReferent";
}
<div class="divForme">
    <h2>UrediUslugu</h2>

    <form action="/Usluge/DodajUredjenuUslugu">
        <input type="hidden" class="form-control" name="UslugaId" value="@Model.Usluga.Id">
        <div class="form-group">
            <label>Naziv</label>
            <input type="text" class="form-control" name="Naziv" value="@Model.Usluga.Naziv">
        </div>
        <div class="form-group">
            <label>Opis</label>
            <input type="text" class="form-control" name="Opis" value="@Model.Usluga.Opis">
        </div>
        <div class="form-group">
            <label>Cijena</label>
            <input type="text" class="form-control" name="Cijena" value="@Model.Usluga.Cijena">
        </div>
        <div class="form-group">
            <label>Odaberite kategoriju</label>
            <select class="form-control" name="KategorijaId">
                @foreach (var kategorije in @Model.Kategorije)
                {
                    @if (Model.Usluga.KategorijaId == kategorije.Id)
                    {
                        <option value="@kategorije.Id" selected="selected">@kategorije.Naziv</option>
                    }
                    else
                    {
                        <option value="@kategorije.Id">@kategorije.Naziv</option>

                    }

                }
            </select>
        </div>
        <button type="submit" class="btn bg-primary">Sacuvaj</button>
    </form>
    </div>