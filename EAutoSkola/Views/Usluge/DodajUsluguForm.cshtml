@model EAutoSkola.ViewModel.KategorijeViewModel;
@{
    ViewBag.Title = "DodajUsluguForm";
    Layout = "_LayoutReferent";
}
<div class="divForme">
    <h2>Dodaj uslugu</h2>
    <form action="/Usluge/DodajUslugu">
        <div class="form-group">
            <label>Naziv usluge</label>
            <input type="text" class="form-control" name="Naziv">
        </div>
        <div class="form-group">
            <label>Opis</label>
            <input type="text" class="form-control" name="Opis">
        </div>
        <div class="form-group">
            <label>Cijena</label>
            <input type="text" class="form-control" name="Cijena">
        </div>
        <div class="form-group">
            <label>Odaberite kategoriju</label>
            <select class="form-control" name="KategorijaId">
                @foreach (var kategorije in Model.Kategorije)
                {
                    <option value="@kategorije.Id">@kategorije.Naziv</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Sacuvaj</button>
    </form>
    </div>